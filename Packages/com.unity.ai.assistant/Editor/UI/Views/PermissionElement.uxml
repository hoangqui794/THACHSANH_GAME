<UXML xmlns:ui="UnityEngine.UIElements" xmlns="UnityEngine.UIElements" editor-extension-mode="False">
    <ui:VisualElement name="permissionInteraction">
        <ui:VisualElement name="questionContainer">
            <ui:Label name="preActionLabel" text="Assistant is requesting permission to "/>
            <ui:Label name="actionLabel"/>
        </ui:VisualElement>
        <ui:Label name="questionLabel"/>
        <ui:VisualElement name="codeContainer" />
        <ui:VisualElement name="buttonContainer">
            <ui:Button name="yesButton" class="mui-action-button">
                <ui:Image class="mui-icon-checkmark"/>
                <ui:Label name="yesLabel" text="Allow"/>
                <ui:Label name="pointCountLabel" class="point-count-badge"/>
            </ui:Button>
            <ui:Button name="yesAlwaysButton" class="mui-action-button">
                <ui:Image class="mui-icon-double-checkmark"/>
                <ui:Label name="yesAlwaysLabel" text="Allow for conversation"/>
                <ui:VisualElement name="sparkleBadge" class="point-count-badge">
                    <ui:Image name="sparkleIconPermission" class="mui-icon-sparkle sparkle-icon"/>
                </ui:VisualElement>
            </ui:Button>
            <ui:Button name="noButton" class="mui-action-button">
                <ui:Image class="mui-icon-close"/>
                <ui:Label name="noLabel" text="Don't allow"/>
            </ui:Button>
        </ui:VisualElement>
    </ui:VisualElement>
    <ui:VisualElement name="permissionAnswer">
        <ui:VisualElement name="answerLine">
            <ui:Label name="answerLabel"/>
            <ui:Label name="answerActionLabel"/>
        </ui:VisualElement>
        <ui:Label name="sessionMessageLabel"/>
    </ui:VisualElement>
</UXML>
