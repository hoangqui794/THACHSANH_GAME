#optionsSection {
    flex-direction: column;
    padding-left: 0;
    padding-right: 0;
}

.mui-control-section-buttons {
    flex-direction: row;
}

.mui-chat-response-button {
    margin: 0;
    height: 20px;
    border-width: 0;
    border-radius: 0;
    align-items: center;
    justify-content: center;
    background-color: transparent;
}

#copyButton {
    margin-left: 0;
    border-radius: 0;
    margin-right: 0px;
    height: 32px;
    border-radius: 4px;
}

#copyButton:hover {
    background-color: var(--muse-chat-backgrounds-100);
}

#upVoteButton {
    margin-left: 0;
    border-radius: 0;
    height: 32px;
    border-radius: 4px;
}

#upVoteButton:hover {
    background-color: var(--muse-chat-backgrounds-100);
}

#downVoteButton {
    border-radius: 0;
    margin-left: 0px;
    height: 32px;
    border-radius: 4px;
}

#downVoteButton:hover {
    background-color: var(--muse-chat-backgrounds-100);
}

.mui-chat-response-button:disabled {
    display: none;
}

.mui-feedback-parameters {
    margin-top: 8px;
    margin-left: 0;
    margin-right: 0;
}

.mui-feedback-label {
    margin-top: 8px;
    margin-bottom: 2px;
    margin-left: 2px;
}

.mui-feedback-label-light {
    align-self: flex-end;
    margin-bottom: 2px;
    margin-left: 2px;
    color: var(--muse-chat-text-secondary);
}

.mui-feedback-label-strong {
    -unity-font-style: bold;
}

.mui-feedback-label-group {
    flex-direction: row;
}

#feedbackFlagCheckbox {
    margin-top: 8px;
    margin-bottom: 8px;
    margin-left: 0;
}

#feedbackFlagCheckbox .unity-label {
    position: absolute;
    margin-left: 20px;
}

.mui-feedback-comment-foldout-button-row {
    margin-top: 4px;
    flex-direction: row;
    height: 24px;
    align-content: flex-end;
}

#feedbackSendButton {
    width: 40px;
}

#feedbackSendButtonImage {
    margin-top: 0;
}

.mui-feedback-button-active {
    background-color: var(--muse-chat-button-active);
}

.mui-feedback-button-active:hover:enabled {
    background-color: var(--muse-chat-button-active);
}

.mui-action-button-active:hover:enabled {
    background-color: var(--muse-chat-button-active);
}

#feedbackFlagCheckbox {
    flex-grow: 1;
    padding: 0;
    margin:0;
    align-items: center;
}

#commentFoldout Toggle {
    margin-left: 0px;
}

#feedbackValueText {
    white-space: normal;
    min-height: 44px;
    margin-top: 8px;
    margin-bottom: 8px;
}

#feedbackValueText .unity-base-text-field__input {
    background-color: var(--muse-chat-backgrounds-100);
    height: 100%;
    padding: 4px;
}

.mui-feedback-text-scrollroot {
    max-height: 160px;
}

#feedbackValueText {
    margin: 0;
}

#feedbackValueText .mui-mtf-placeholder-root {
    margin: 4px;
}
