.permissionelement__element {
    margin-bottom: 12px;
    background-color: var(--muse-chat-backgrounds-100);
    border-radius: 4px;
    padding: 5px 8px;
}

#questionContainer {
    flex-direction: row;
}

#preActionLabel {
    margin-top: 3px;
    margin-bottom: 3px;
}

#actionLabel {
    margin-top: 3px;
    margin-bottom: 3px;
    -unity-font-style: bold;
}

#questionLabel {
    margin-top: 4px;
    margin-bottom: 4px;
}

#buttonContainer {
    flex-direction: row;
    margin-top: 3px;
    margin-bottom: 3px;
}

#noButton {
    margin-left: auto;
}

#buttonContainer Image {
    width: 16px;
    height: 16px;
    align-self: center;
}

#permissionAnswer {
    margin-top: 3px;
    margin-bottom: 3px;
}

#answerLine {
    flex-direction: row;
    align-items: center;
}

#answerLabel {
    color: var(--muse-chat-text-thoughts);
    margin-right: 3px;
    padding-left: 0;
}

#answerActionLabel {
    color: var(--muse-chat-text-secondary);
}

#sessionMessageLabel {
    color: var(--muse-chat-text-thoughts);
    margin-top: 4px;
    margin-left: 23px;
    padding-left: 0;
}

#permissionAnswer .mui-icon-checkmark {
    -unity-background-image-tint-color: var(--muse-chat-icon-success-color);
}

#permissionAnswer .mui-icon-close {
    --unity-image-tint-color: var(--muse-chat-icon-error-color);
}

#yesButton {
    margin-left: 0;
}

#noButton {
    margin-right: 0;
}

#pointCountLabel {
    padding: 0 2px;
    -unity-text-align: middle-center;
}

/* Reduce the button padding when there is a badge so that the top padding and side padding looks the same */
#yesButton.has-badge, #yesAlwaysButton.has-badge {
    padding-right: 5px;
}

.point-count-badge {
    color: var(--unity-colors-window-text);
    background-color: var(--muse-chat-backgrounds-175);
    border-color: var(--unity-colors-button-border);
    border-width: 1px;
    border-radius: 3px;
    height: 15px;
    min-width: 16px;
    padding: 0 1px;
    margin-left: 8px;
    align-self: center;
    font-size: 11px;
}

.point-count-badge #sparkleIconPermission {
    width: 12px;
    height: 12px;
    align-self: center;
}
