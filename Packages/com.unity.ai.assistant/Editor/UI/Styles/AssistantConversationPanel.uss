.assistantconversationpanel__element {
    flex-grow: 1;
}

.assistantconversationpanel__element-root {
    flex-grow: 1;
}

.mui-text-field-popup-container {
    position: absolute;
    bottom: 70px;
}

.mui-conversation-overlay-elements {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    align-items: center;
}

#conversationScrollToBottomButton {
    position: absolute;
    bottom: 12px;
}

#conversationRoot #unity-content-container {
    padding-top: 18px;
    max-width: 768px;
    width: 100%;
    align-self: center;
}

#conversationRoot ChatElementWrapper #unity-content-container {
    padding-top: 0;
}

#conversationRoot .unity-base-slider__dragger {
    background-color: var(--muse-chat-conversation-dragger);
}

#conversationRoot .unity-base-slider__dragger:hover {
    background-color: var(--muse-chat-conversation-dragger-hover);
}

.mui-message-cost-label {
    font-size: 11px;
    color: var(--muse-chat-text-secondary);
    align-self: center;
}
